<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    tools:context=".dashboard.DashBoardActivity"
    android:background="@color/white">

    <TextView
        android:id="@+id/user_name_text_view_title"
        android:layout_width="wrap_content"
        android:text="İsim:"
        android:textFontWeight="600"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@id/user_email_text_view_title"
        android:fontFamily="sans-serif-black"
        android:layout_alignParentStart="true"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/user_name_text_view_value"
        android:layout_width="wrap_content"
        android:text="Ali"
        android:textFontWeight="300"
        android:fontFamily="sans-serif-black"
        android:layout_marginStart="15dp"
        android:layout_toRightOf="@id/user_name_text_view_title"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/user_email_text_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-black"
        android:textFontWeight="600"
        android:layout_below="@id/user_name_text_view_title"
        android:text="Email:" />

    <TextView
        android:id="@+id/user_email_text_view_value"
        android:layout_width="wrap_content"
        android:text="Ali"
        android:textFontWeight="300"
        android:fontFamily="sans-serif-black"
        android:layout_marginStart="15dp"
        android:layout_toRightOf="@id/user_email_text_view_title"
        android:layout_alignBottom="@id/user_email_text_view_title"
        android:layout_height="wrap_content"/>



    <com.google.android.material.button.MaterialButton
        android:id="@+id/chat_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chat'i Başlat"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:visibility="visible"
        android:layout_below="@id/user_email_text_view_value"/>



    <com.google.android.material.button.MaterialButton
        android:id="@+id/logout_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Çıkış Yap"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:layout_alignParentBottom="true"/>



</RelativeLayout>